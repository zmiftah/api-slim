{
  "name": "zmiftah/api-slim",
  "description": "A Slim Framework Api",
  "keywords": ["api", "slimframework", "rest", "router", "psr7"],
  "homepage": "http://github.com/zmiftah/api-slim",
  "license": "MIT",
  "authors": [
    {
      "name": "Zein Miftah",
      "email": "zmiftahdev@gmail.com",
      "homepage": "http://zmiftah.github.io/"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "slim/slim": "^3.9",
    "slim/php-view": "^2.2",
    "monolog/monolog": "^1.23"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8 < 6.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Zmdev\\App\\": "src/"
    }
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public public/index.php",
    "test": "phpunit"
  }

}
