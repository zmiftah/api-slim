{
  "name": "zmiftah/api-slim",
  "description": "A Slim Framework Api",
  "keywords": ["api", "slimframework", "rest", "router", "psr7"],
  "homepage": "http://github.com/zmiftah/api-slim",
  "license": "MIT",
  "authors": [
    {
      "name": "Zein Miftah",
      "email": "zmiftahdev@gmail.com",
      "homepage": "http://zmiftah.github.io/"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "slim/slim": "^3.9",
    "slim/php-view": "^2.2",
    "illuminate/database": "~5.5",
    "monolog/monolog": "^1.23",
    "vlucas/phpdotenv": "^2.4"
  },
  "require-dev": {
    "phpunit/phpunit": ">=4.8 < 6.0"
  },
  "autoload": {
    "psr-4": {
      "tests\\": "tests/",
      "zmdev\\app\\": "src/"
    }
  },
  "config": {
    "process-timeout" : 0
  },
  "scripts": {
    "start": "php -S localhost:8083 -t web index.php",
    "test": "phpunit"
  }

}
